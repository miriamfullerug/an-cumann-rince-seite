<!DOCTYPE html>
<html lang="ga">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Seit {{ title }} | {{ site.title }}</title>
  <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
</head>
<body>
  <main>
    {% include "partials/nav.njk" %}

    <section class="content-section set-page">
      <header class="set-header">
        <h1>Seit {{ title }}</h1>
        <div class="set-meta">
          <span><strong>Contae:</strong> {{ county }}</span>
          <span><strong>Iomlán:</strong> {{ totalBars }} barra</span>
        </div>
      </header>

      {% if parsedSet and parsedSet.introHtml %}
      <div class="set-intro">
        {{ parsedSet.introHtml | safe }}
      </div>
      {% endif %}

      <div class="figures-container">
        {% if parsedSet and parsedSet.figures %}
        {% for figure in parsedSet.figures %}
        <article class="figure-card">
          <header class="figure-header">
            <h2>Figiúr {{ figure.number }} – {{ figure.name }}</h2>
            {% if figure.tuneType and figure.bars %}
            <span class="figure-meta">{{ figure.tuneType }} · {{ figure.bars }} barra</span>
            {% endif %}
          </header>
          <div class="figure-body">
            <div class="figure-instructions">
              {{ figure.contentHtml | safe }}
            </div>
            <div class="figure-video">
              {% if figure.video %}
              <div class="video-wrapper">
                <iframe
                  src="{{ figure.video }}"
                  title="Figiúr {{ figure.number }}"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              </div>
              {% else %}
              <div class="video-placeholder">
                <span>Físeán ag teacht go luath</span>
              </div>
              {% endif %}
            </div>
          </div>
        </article>
        {% endfor %}
        {% endif %}
      </div>
    </section>
  </main>
</body>
</html>
